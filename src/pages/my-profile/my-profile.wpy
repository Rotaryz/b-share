    <view class="submit-btn">保存</view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import base from 'common/mixins/base'
  import URIS from 'common/js/config'
  import {ERR_OK} from 'api/base'
  import Info from 'api/info'
  import Upload from '@/api/uploads'

  export default class profile extends wepy.page {
    mixins = [base]

    config = {
      navigationBarTitleText: '我的资料',
      disableScroll: true
    }

    data = {
      imageUrl: URIS.image,
      industryArr: ['美容院', '美发店', '整形公司', '化妆品公司', '培训学校'],
      industry: '',
      genderArr: ['男', '女'],
      gender: '',
      ageArr: [],
      age: '',
      workYearArr: [],
      workYear: '',
      name: '',
      address: '',
      mobile: '',
      role: 0
    }

    methods = {
      IndustryChange(e) {
        this.industry = this.industryArr[e.detail.value]
        this.$apply()
      },
      genderChange(e) {
        this.gender = this.genderArr[e.detail.value]
        this.$apply()
      },
      ageChange(e) {
        this.age = this.ageArr[e.detail.value]
        this.$apply()
      },
      workYearChange(e) {
        this.workYear = this.workYearArr[e.detail.value]
        this.$apply()
      },
      nameChange(e) {
        this.name = e.detail.value
        this.$apply()
      },
      addressChange(e) {
        this.address = e.detail.value
        this.$apply()
      },
      async uploadAvatar() {
        let res = await wepy.chooseImage({sizeType: ['compressed']})
        console.log(res)
        if (!res) {
          return
        }
        let upRes = await Upload.uploadImages(res.tempFilePaths[0])
        this.loaded()
        console.log(upRes)
      }
    }

    async onLoad() {
      for (let i = 18; i <= 50; i++) {
        this.ageArr.push(i)
      }
      for (let j = 1; j <= 30; j++) {
        this.workYearArr.push(j)
      }
      let Json = await Info.getUserInfo()
      this.loaded()
      if (Json.error !== ERR_OK) {
        return
      }
      let res = Json.data
      console.log(res)
      this.mobile = res.mobile
      this.name = res.name
      this.role = res.role
      this.$apply()
    }
  }
</script>

