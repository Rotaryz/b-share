        <image class="avatar" mode="aspectFill" wx:if="{{imageUrl && role === 1}}" src="{{imageUrl + '/defaults/share/page/pic-find_defaulta02@2x.png'}}"></image>
        <image class="avatar" mode="aspectFill" wx:if="{{imageUrl && role === 0}}" src="{{imageUrl + '/defaults/share/page/pic-find_defaulta01@2x.png'}}"></image>
