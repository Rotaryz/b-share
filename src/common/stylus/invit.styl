@import "./variable"
page
  height: 100%

.invit
  height: 100%
  width: 100%
  position: relative

.invit-bac
  height: 83%
  width: 100%

.invit-text
  position: absolute
  top: 2%
  z-index: 1
  width: 70%
  height: 12%
  left: 15%
  image
    width: 100%
    height: 100%

.invit-bac-btn
  width: 100%
  height: 30%
  margin-top: -2%
  margin-bottom: -1%

.invit-text-white
  position: absolute
  top: 50%
  z-index: 1
  width: 90%
  height: 60%
  left: 5%
  image
    width: 100%
    height: 100%

.invit-li-img
  height: 18%
  position: absolute
  top: -15px
  z-index: 1
  width: 90%
  display: flex
  left: 5%
  .li-img
    text-align: center
    width: 23%
    padding: 0px 5%

.invit-arrow
  height: 5%
  position: absolute
  top: 5%
  z-index: 1
  width: 100%
  display: flex
  .view-1
    width: 3%
    margin-left: 33%
  .view-2
    width: 3%
    margin-left: 28%

.invit-li-text
  height: 5%
  position: absolute
  top: 16%
  z-index: 1
  width: 90%
  display: flex
  left: 5%
  font-size: $font-size-small
  text
    text-align: center
    width: 33%

.invit-click
  height: 20%
  width: 80%
  position: absolute
  top: 30%
  left: 10%
  z-index: 1
  font-size: $font-size-small
  image
    position: absolute
  text
    position: absolute
    top: 20%
    width: 100%
    text-align: center
    font-size: $font-size-large-m
    color: $color-white
    font-family: $font-family-regular

.invit-my
  position: absolute
  top: 64%
  font-size: $font-size-large
  display: flex
  width: 80%
  left: 10%
  view:nth-child(1)
    border-left: 5px solid #707FFF
    padding-left: 3px
  view:nth-child(2)
    font-size: $font-size-small
    right: 0px
    top: 5px
    position: absolute
    color: #999999

.invit-my-li
  position: absolute
  top: 74%
  display: flex
  width: 80%
  left: 10%
  font-size: $font-size-medium
  font-family: $font-family-regular
  view
    width: 33%
  view:nth-child(2)
    border-left: 1px solid #DAE0E4
    border-right: 1px solid #DAE0E4
  .rmb-color
    display: block
    text-align: center
    margin: 5px 0px
    font-weight: bold
    font-size: $font-size-large-m
    color: #FF3388
    text
      .rmb-color-min
        font-size: $font-size-medium

.number
  display: block
  text-align: center
  margin: 5px 0px
  color: #999999
  text
    font-weight: bold
    font-size: $font-size-large-m
    color: #333333

.invit-form
  position:absolute
  top:30%
  width:80%
  left:10%
  .invit-form-title
    text-align: center
  .invit-form-v
    font-size: $font-size-medium
    border-bottom: 1px solid #DAE0E4
    display: flex
    height: 30px
    line-height: 30px
    padding-top: 10px
    color: #CCCCCC
    position: relative
    text
      width: 30%
    input
      width: 60%
      height: 30px
      line-height: 40px
    .invit-form-v-picker
      width: 50%
      height: 30px
      line-height: 34px
    .invit-form-v-getcode
      border-left: 1px solid #ccc
      padding-left: 10px
      height: 16px
      line-height: 18px
      margin-top: 9px
      color: $font-size-medium
    .eye
      position:absolute
      height:100%
      width:18%
      right:0
      top:0
      z-index:150
      image
        position:absolute
        position:absolute
        top:50%
        -webkit-transform:translateY(-50%)
        -moz-transform:translateY(-50%)
        transform:translateY(-50%)
        width:18px
        height:18px


  .invit-form-v-submit
    height: 27%
    width: 80%
    text-align: center
    left: 10%
    position: absolute
    bottom: -33%
    text
      position: absolute
      top: 23%
      width: 100%
      text-align: center
      font-size: 18px
      color: #fff
      font-family: 'PingFangSC-Regular'
      left: 0px
